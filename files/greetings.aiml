        <button>
            <text>Create it</text>
            <postback>CREATE </postback>
        </button>
        
        <button>
            <text>Use it</text>
            <postback>USE</postback>
        </button>
        
        <button>
            <text>Manage it</text>
            <postback>MANAGE</postback>
        </button>
        
